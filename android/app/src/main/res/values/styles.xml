<resources>
    <!-- Shown before Flutter draws -->
    <style name="LaunchTheme" parent="@style/Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Optional, but nice if you have an adaptive launcher icon -->
        <!-- <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item> -->
        <item name="postSplashScreenTheme">@style/StripeCompatibleTheme</item>
    </style>

    <!-- Stripe requires AppCompat/MaterialComponents -->
    <style name="StripeCompatibleTheme"
           parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>